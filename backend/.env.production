# Production Environment Variables for BazaarSetu Backend

# Server Configuration
NODE_ENV=production
PORT=8000

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bazaarsetu?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-min-32-chars
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://bazaarsetu.vercel.app

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MANDI_API_KEY=your-mandi-api-key

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100